height_contactus = 135vh;

.contactus-section {
    margin-top: 5rem;
    height: height_contactus;
    position: relative;

    @media (max-width: 768px) {
        height: height_contactus * 1.5;
    }

    .contactus-curve {
        absolute_curve_general_donw();
    }

    .contactus-curve__line {
        absolute_curve_general_donw();
        bottom: 3px;
    }

    &::before {
        content: '';
        position: absolute;
        left: -2.5%;
        top: -2.5rem;
        background-color: blue_trhee;
        border-radius: 50% / 200px 200px 0 0;
        width: 105%;
        height: 100%;
        opacity: 0.4;

        @media (max-width: 768px) {
            border-radius: 50% / 100px 100px 0 0;
        }
    }

    .contactus {
        position: absolute;
        height: 100%;
        width: 110%;
        top: 0px;
        left: -5%;
        border-radius: 50% / 200px 200px 0 0;
        background-color: pink_car;

        @media (max-width: 768px) {
            border-radius: 50% / 100px 100px 0 0;
        }

        .contactus-title {
            font-family: centuryGothicBold;
            font-size: 4vmax;
            text-transform: uppercase;
            text-align: center;
            margin-top: 3rem;
            color: white;
        }

        .contactus-cont__form {
            displayFG(flex, space-between, center);

            @media (max-width: 768px) {
                flex-direction: column;
            }

            .contactus-form, .contactus-cont__social-media {
                width: 50%;

                @media (max-width: 768px) {
                    width: 100%;
                }
            }

            .contactus-form {
                @media (max-width: 768pc) {
                    width: 100%;
                    padding: 0rem 2rem;
                }

                .contactus-form__input {
                    border-radius: 3rem;
                    display: block;
                    border: none;
                    padding: 0.5rem;
                    margin-bottom: 1.5rem;
                    font-size: 1.3rem;
                    width: 100%;

                    &:nth-child(4) {
                        height: 15rem;
                        border-radius: 5rem;
                        text-align: center;
                    }

                    &::placeholder {
                        color: pink_car;
                    }
                }
            }

            .contactus-cont__social-media {
                displayFG(flex, center, center);
                flex-direction: column;

                .contactus-title__social-media {
                    font-family: centuryGothicBold;
                    font-size: 3vmax;
                    text-transform: uppercase;
                    text-align: center;
                    color: white;
                    margin: 0px;
                    margin-bottom: 1rem;
                }

                .contactus-grid__social-media {
                    width: 100%;
                    displayFG(grid, center, center);
                    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
                    gap: 1rem;

                    .contactus-cont__icon-url {
                        display: block;
                        transform: scale(1);
                        border-radius: 100%;
                        background-color: white;
                        displayFG(flex, center, center);
                        transition: 0.3s ease-in-out;

                        &:hover {
                            background-color: blue_dark;
                            transform: scale(1.05);
                        }

                        &:hover > i {
                            color: white;
                        }

                        @media (min-width: 768px) {
                            for i in 1 .. 4 {
                                &:nth-child({i}) {
                                    if (i == 1 || (i == 3)) {
                                        justify-self: end;
                                    } else {
                                        justify-self: start;
                                    }
                                }
                            }
                        }

                        @media (max-width: 768px) {
                            for i in 1 .. 4 {
                                &:nth-child({i}) {
                                    justify-self: center;
                                }
                            }
                        }

                        i {
                            padding: 2rem;
                            font-size: 3rem;
                            color: blue_dark;
                            transition: 0.3s ease-in-out;
                        }
                    }
                }
            }

            .contactus-social-media__mail {
                margin-top: 3rem;
                font-size: 1rem;
                font-family: centuryGothicBold;
                
                @media (max-width: 768px) {
                    display: block;
                }
            }
        }

        .contactus-description {
            text-align: center;
            width: 70%;
            margin: 0 auto;
            display: block;
            margin-top: 4rem;
            font-family: centuryGothic;
            font-size: 1.5rem;
        }
    }
}

