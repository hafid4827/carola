        margin-top: 0.5rem;
    }

    .footer-main__curve {
        position: absolute;
        top: -10.5rem;
        width: 100%;
        transform: rotateX(180deg);

        @media (max-width: 768px) {
            top: -7.5rem;
        }

        @media (max-width: 468px) {
            top: -5rem;
        }

        @media (max-width: 268px) {
            top: -3rem;
        }
    }

    .footer-main-page__grid {
        gap: 1rem;
        top: -2.5rem;
        left: 0;
        width: 100%;
        height: 100%;
        position: absolute;
        padding: 0rem 5rem;
        background-color: blue_dark;
        displayFG(grid, center, center);
        grid-template-rows: repeat(2, 13rem);
        grid-template-columns: repeat(3, 1fr);

        @media (max-width: 768px) {
            text-align: center;
            grid-template-rows: repeat(6, 13rem);
            grid-template-columns: repeat(1, 1fr);
        }

        .footer-main-page__grid-item {
            justify-self: center;

            &:nth-child(4) {
                grid-column: 1 / 3;
                text-align: center;

                @media (max-width: 768px) {
                    grid-column: 1 / 2;
                }
            }

            .footer-main__title {
                font-size: 2rem;
                margin: 0rem;
                text-transform: uppercase;
            }

            .footer-main__paraph {
                font-size: 1.5rem;
                text-transform: capitalize;
            }

            .footer-main__small {
                margin: 0.5rem 0rem;
                display: block;
            }

            .PRASO {
                color: gray;
                font-size: 1rem;
            }
        }
    }
}

// btn scroll
.btn-up {
    border-radius: 3rem;
    background-color: blue_dark;
    transition: 0.5s ease-in-out;
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    padding: 1rem;
    display: none;
    z-index: 100;
    cursor: pointer;
    transform: scale(1);

    &:hover {
        transform: scale(1.1);
    }
