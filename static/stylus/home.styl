// loader
.load-main {
    position: fixed;
    height: 100vh;
    width: 100%;
    background-color: white;
    z-index: 40;
    displayFG(flex, center, center);

    .load-con {
        position: relative;

        .load-main__icon {
            width: 5rem;
            height: 5rem;
        }

        .load-circle {
            position: absolute;
            content: '';
            width: 10rem;
            height: 10rem;
            border: 1rem solid transparent;
            border-radius: 100%;
            border-width: 1rem;
            border-bottom-style: solid;
            border-bottom-color: blue_dark;
            z-index: 50;
            top: -2rem;
            left: -2.5rem;
            animation: 1s load infinite ease-in-out;
        }

        @keyframes load {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }
    }
}

// header
.header-section-home {
    width: 100%;
    height: auto;
    position: relative;

    @media (min-width: 768px) {
        height: 100vh;
    }

    .header-img__bg {
        position: absolute;
        width: 45rem;
        height: 50rem;
        right: -25rem;
        top: 5rem;
    }

    .nav-home__menu {
        displayFG(flex, center, none);
        position: relative;

        .nav-form__menu {
            position: absolute;
            top: -1rem;
            left: -1rem;
            displayFG(flex, center, center);

            .search-nav {
                transition: 0.5s ease-in-out;
                padding: 1.5rem;
                displayFG(flex, center, center);
                background-color: pink_car;
                border-radius: 50%;
                border-top-left-radius: 0%;
                width: 7rem;
                height: 6rem;
                cursor: pointer;

                .icon-search {
                    width: 1.5rem;
                    height: 1.5rem;
                    fill: white;
                    cursor: pointer;
                }
            }
        }

        .search-content {
            display: none;
            opacity: 0;
            transition: 1s ease-in-out;
            overflow: hidden;

            .search-nav__input {
                border: none;
                border-radius: 1rem;
                font-size: 1.2rem;
                padding: 0.2rem 0.5rem;
                margin-left: 1rem;
            }

            .search-submit {
                border: none;
                background-color: blue_car;
                border-radius: 0.5rem;
                margin-left: 0.5rem;
                text-transform: capitalize;
                color: white;
                padding: 0.5rem;
            }
        }

        .nav-icon__menu {
            displayFG(flex, center, center);
            top: 0;
            right: 0;
            top: -1rem;
            right: -1rem;
            height: 6rem;
            width: 7.3rem;
            cursor: pointer;
            border-radius: 50%;
            position: absolute;
            background-color: blue_car;
            border-top-right-radius: 0%;
            transition: 0.4s ease-in-out;

            &::before {
                content: '';
                height: 6.3rem;
                width: 8rem;
                border-radius: 50%;
