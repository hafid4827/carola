// fonts
@font-face {
    font-family: centuryGothic;
    src: url('../fonst/GOTHIC.TTF');
}

@font-face {
    font-family: centuryGothicBold;
    src: url('../fonst/GOTHICB.TTF');
}

// evita el scroll lateral de la pagina completa solo en el body y para generalizar en html
html, body {
    max-width: 100%;
    overflow-x: hidden;
}

/* apply a natural box layout model to all elements, but allowing components to change */
html {
    box-sizing: border-box;
    scroll-behavior: smooth;
}

body {
    font-family: centuryGothic;
    font-weight: 500;
    background-color: white_bg;
}

*, *:before, *:after {
    box-sizing: inherit;
}

ul {
    margin: 0rem;
    list-style: none;
    padding: 0;
}

a {
    text-decoration: none;
    color: black;
}

button {
    cursor: pointer;
    border: none;
}

// inputs
input, textarea, select {
    outline: none;
}

// container
.container120 {
    width: 1200px;
    margin: 0 auto;
}

// display
displayFG(dis, just-con, align) {
    display: dis;
    justify-content: just-con;
    align-items: align;
}

// z-index
for z in -4 .. 4 {
    .zIndex-{z * 10} {
        z-index: z * 10;
    }
}

// botones generales
.btn {
    padding: 0.8rem 1.8rem;
    font-size: 1.3rem;
    color: white;
    border-radius: 2rem;
    text-transform: capitalize;
    transition: 0.5s ease-in-out;
    transform: scale(1);
    font-family: font_bold;

    &:hover {
        transform: scale(1.03);
    }
}

.btn-color-1 {
    background-color: blue_dark;
}

.btn-color-2 {
    background-color: pink_car;
}

// positions
.fixed {
    position: fixed;
}

.position-top-left {
    top: 1rem;
    left: 1rem;
}

// dise√±o general de las lineas de separacion he
hr {
    border: 1px solid pinkred_car;
}

// scrollbar
body::-webkit-scrollbar {
    width: 5px;
    background-color: #F5F5F5;
}

body::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
    background-color: #666666;
}

// shadows
.shadowNumberTen {
    box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;
}

// alturas generales
.cont-heigth{
    height: 200vh;
}

// flex-general
.flex-general{
    displayFG(flex, center, center);
}